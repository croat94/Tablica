<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff5680ed">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        tools:context=".Tablica"
        android:background="@drawable/listview_background">

        TextView
            android:id="@+id/kolo"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="#696969"
            android:gravity="center"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:autoText="false" />


        <TextView
            android:id="@+id/domacin"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="NK Šartovac"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:typeface="sans"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/domacinSlika"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rezultat"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="15:12"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/gost"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="NK Šartovac"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:typeface="sans"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="4dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gostSlika" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/domacinSlika"
            android:layout_alignBottom="@+id/rezultat"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/gostSlika"
            android:layout_alignBottom="@+id/rezultat"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</RelativeLayout>