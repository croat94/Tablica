<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonTablica1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/active"
            android:onClick="clickedButtonTablica"
            android:text="Tablica"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonPosljednje1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="#006699"
            android:onClick="clickedButtonPosljednje"
            android:text="Rezultati po kolima"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/predlozak_tablica_redak"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:divider="#006699"
        android:dividerHeight="1px"
        android:background="@drawable/list_border"
        android:paddingBottom="2dp"
        android:paddingTop="1dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2920422408168999/2494412866" />


</LinearLayout>